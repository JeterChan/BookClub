# ===========================================
# 資料庫設定
# ===========================================
# PostgreSQL 資料庫連線資訊
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=bookclub_db

# 資料庫連線 URL
# 開發環境範例: postgresql://admin:password@db:5432/bookclub_dev
# 生產環境範例: postgresql://user:pass@host:5432/dbname
DATABASE_URL=postgresql://postgres:your_password@db:5432/bookclub_db

# ===========================================
# JWT 安全設定
# ===========================================
# JWT 密鑰 (生產環境請使用強密碼，建議 32+ 字元隨機字串)
SECRET_KEY=your-secret-key-here-please-change-in-production

# JWT 演算法 (建議使用 HS256)
ALGORITHM=HS256

# JWT Token 過期時間 (分鐘)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===========================================
# CORS 設定
# ===========================================
# 前端應用 URL (支援多個 URL，用逗號分隔)
# 開發環境範例: http://localhost:5174
# 生產環境範例: https://your-frontend.vercel.app
FRONTEND_URL=http://localhost:5174

# Vercel 專案名稱 (用於自動允許 Vercel deployment URLs)
# 範例: my-bookclub-app
VERCEL_PROJECT_NAME=

# 開發模式：允許所有 Vercel preview deployments (僅用於測試，生產環境請設為 false)
ALLOW_ALL_VERCEL=false

# ===========================================
# Email 服務設定 (SendGrid)
# ===========================================
# SendGrid API Key (用於發送郵件)
SENDGRID_API_KEY=your-sendgrid-api-key

# 寄件者 Email
SENDGRID_FROM_EMAIL=noreply@example.com

# Email 驗證信範本 ID (SendGrid Dynamic Template)
SENDGRID_VERIFICATION_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# 密碼重設信範本 ID (SendGrid Dynamic Template)
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# OAuth 設定 (選填)
# ===========================================
# Google OAuth 客戶端 ID
GOOGLE_CLIENT_ID=your-google-client-id

# Google OAuth 客戶端密鑰
GOOGLE_CLIENT_SECRET=your-google-client-secret