{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "mocha", "@wdio/globals/types"],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "test/e2e/**/*.ts",
    "wdio.conf.ts"
  ]
}
