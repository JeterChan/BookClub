      "node",
      "@wdio/globals/types",
      "@wdio/mocha-framework"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
